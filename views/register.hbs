{{#section "header"}}
	<link rel="stylesheet" href="/css/bootstrap.min.css"/>
{{/section}}

{{#if error}}<p class="bg-danger">{{error}}</p>{{/if}}
<form class="form" method="post" action="/register">
    <div class="form-group {{#if errors.username}}has-error{{/if}}">
      <label class="control-label" for="username">Username</label>
      <input type="text" name="username" class="form-control" value="{{post.username}}"/>
    </div>
    <div class="form-group {{#if errors.email}}has-error{{/if}} ">
      <label class="control-label" for="email">Email</label>
      <input type="text" name="email" class="form-control" value="{{post.email}}"/>
    </div>
    <div class="form-group {{#if errors.password}}has-error{{/if}}">
      <label class="control-label" for="password">Password</label>
      <input type="password" name="password" class="form-control" />
    </div>
    <div class="form-group {{#if errors.password2}}has-error{{/if}}">
      <label class="control-label" for="password2">Confirm Password</label>
      <input type="password" name="password2" class="form-control" />
    </div>
    <input class="btn btn-lg btn-primary" type="submit" text="Register" />
</form>
