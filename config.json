{
	"stylesheets": {
		"src":{
			"folder": "_scss",
			"file":"**/*.scss"
		},
		"dest": {
			"folder":"public/css",
			"file":"screen.css"
		}
	},
	"components": {
		"src":{
			"folder": "_components",
			"templates":"**/*.html",
			"all":"**/*.*"
		},
		"dest": {
			"folder":"public/components"
		}
	},
  "fonts": {
    "dest": {
      "folder":"./public/fonts"
    }
  },
	"scripts": {
    "src":{
      "folder": "./_js",
      "file": "*.js"
    },
    "dest": {
      "folder":"./public/js"
    }
  },
  "vendor": {
    "src": {
      "folder": "./bower_components",
      "file": "**"
    },
    "dest": {
      "file": "vendor.js"
    }
  },
	"shared": {
		"src":{
			"folder": "classes",
			"file":"**/*.js"
		}
	}
}
